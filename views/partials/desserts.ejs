<div class="desserts content">
  <% desserts.forEach(dessert => { %> <% if(!locals.single) { %>
  <a href="dessert/<%= dessert.id %>">
    <% } %>
    <div class="dessert">
      <h3><%= dessert.name %></h3>
      <% if(locals.single) { %>
        <p><%= dessert.description %></p>
      <% } %>
      <p>$<%= dessert.price %></p>
      <img src="<%= dessert.image_url %>" alt="<%= dessert.name %> image" />
    </div>
    <% }); %> <% if(!locals.single) { %>
  </a>
  <% } %>
</div>